
<Window x:Class="Minder.UI.Forms.TaskShow.TaskShowWpfForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="191.54" Width="256.154"
             Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Margin="0,0,2,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Task:" HorizontalAlignment="Left" Height="33" Margin="9,10,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="{Binding Task.Text}" HorizontalAlignment="Left" Height="33" Margin="56,10,0,0" VerticalAlignment="Top" Width="188" Grid.ColumnSpan="2"/>
        <Label Content="Time:" HorizontalAlignment="Left" Height="32" Margin="9,34,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="{Binding Task.DateRemainder}" HorizontalAlignment="Left" Height="32" Margin="55,34,0,0" VerticalAlignment="Top" Width="189" Grid.ColumnSpan="2"/>
        <Button x:Name="ButtonCloseOk" Content="Close" HorizontalAlignment="Left" Height="31" Margin="9,71,0,0" VerticalAlignment="Top" Width="103" TabIndex="0"/>
        <Button x:Name="ButtonEditTask" Content="Edit Task" HorizontalAlignment="Left" Height="31" Margin="127,71,0,0" VerticalAlignment="Top" Width="103" Grid.ColumnSpan="2" TabIndex="2"/>
        <Button x:Name="ButtonRemindMeLater" Content="Remind Me Later" HorizontalAlignment="Left" Height="31" Margin="127,111,0,0" VerticalAlignment="Top" Width="103" Grid.ColumnSpan="2" TabIndex="1"/>
        <ComboBox x:Name="ComboBoxRemindLater" ItemsSource="{Binding RemindLaterValues}" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="9,117,0,0" VerticalAlignment="Top" Width="103" Height="25" TabIndex="3"/>

    </Grid>
</Window>
