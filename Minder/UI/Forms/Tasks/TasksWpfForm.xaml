<src:BaseWpfForm x:Class="Minder.UI.Forms.Tasks.TasksWpfForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:Minder.UI.Forms"
             mc:Ignorable="d" 
             Height="457" Width="396" Title="Tasks">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <Button Content="New" Command="{Binding NewTaskCommand}" HorizontalAlignment="Left" Height="28" Margin="2,10,0,0" VerticalAlignment="Top" Width="45"/>
        <Button Content="Edit" Command="{Binding EditTaskCommand}" HorizontalAlignment="Left" Height="28" Margin="52,10,0,0" VerticalAlignment="Top" Width="45"/>
        <Button Content="Delete" Command="{Binding DeleteSelectedTaskCommand}" HorizontalAlignment="Left" Height="28" Margin="102,10,0,0" VerticalAlignment="Top" Width="45"/>
        <DataGrid ItemsSource="{Binding Tasks}" Margin="0,43,0,0">
            
        </DataGrid>

    </Grid>
</src:BaseWpfForm>
